<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mstb="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="rmnvich.apps.familybudget.presentation.activity.make.income.mvp.MakeIncomeActivity" />

        <variable
            name="income"
            type="rmnvich.apps.familybudget.data.entity.Income" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll"
                app:navigationIcon="@drawable/ic_action_back_inverted"
                app:title="@string/title_make_income"
                app:titleTextColor="@android:color/white" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_make_card_view_margin"
                    android:focusableInTouchMode="true"
                    app:cardCornerRadius="@dimen/card_view_corner_radius">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_sum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_make_item_margin"
                            android:layout_marginTop="@dimen/activity_make_item_margin"
                            android:layout_marginEnd="@dimen/activity_make_item_margin"
                            android:inputType="numberDecimal"
                            android:maxLength="17"
                            android:text="@={income.value}"
                            app:layout_constraintTop_toTopOf="parent"
                            mstb:met_baseColor="@android:color/black"
                            mstb:met_floatingLabel="highlight"
                            mstb:met_floatingLabelAlwaysShown="true"
                            mstb:met_floatingLabelPadding="5dp"
                            mstb:met_floatingLabelText="Value"
                            mstb:met_floatingLabelTextColor="@android:color/black"
                            mstb:met_floatingLabelTextSize="12.5sp" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_make_item_margin"
                            android:layout_marginTop="@dimen/activity_make_et_margin_top"
                            android:layout_marginEnd="@dimen/activity_make_item_margin"
                            android:inputType="textMultiLine|textCapSentences"
                            android:singleLine="false"
                            android:text="@={income.comment}"
                            app:layout_constraintBottom_toTopOf="@id/spinner_income_type"
                            app:layout_constraintTop_toBottomOf="@id/et_sum"
                            mstb:met_baseColor="@android:color/black"
                            mstb:met_floatingLabel="highlight"
                            mstb:met_floatingLabelAlwaysShown="true"
                            mstb:met_floatingLabelPadding="5dp"
                            mstb:met_floatingLabelText="Comment"
                            mstb:met_floatingLabelTextColor="@android:color/black"
                            mstb:met_floatingLabelTextSize="12.5sp" />

                        <Spinner
                            android:id="@+id/spinner_income_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_make_item_margin"
                            android:layout_marginTop="@dimen/activity_make_et_margin_top"
                            android:layout_marginEnd="@dimen/activity_make_item_margin"
                            android:layout_marginBottom="@dimen/activity_make_item_margin"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/et_comment" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>
        </android.support.v4.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorAccent"
            android:visibility="invisible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:onClick="@{(view) -> handler.onClickApply()}"
            app:srcCompat="@drawable/ic_apply_inverted" />
    </android.support.design.widget.CoordinatorLayout>
</layout>