<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="rmnvich.apps.familybudget.presentation.fragment.categories.mvp.FragmentCategories" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/item_category" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view) -> handler.onClickFab()}"
            android:layout_gravity="bottom|end"
            app:layout_behavior="rmnvich.apps.familybudget.presentation.custom.FabBehaviour"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_action_add" />
    </android.support.design.widget.CoordinatorLayout>
</layout>