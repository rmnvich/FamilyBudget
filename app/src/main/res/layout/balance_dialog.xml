<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/starting_balance"
        android:inputType="numberDecimal"
        app:met_clearButton="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelText="@string/balance"
        app:met_floatingLabelTextColor="@color/colorPrimaryDark"
        app:met_iconLeft="@drawable/ic_total_balance"
        app:met_primaryColor="@color/colorPrimaryDark"
        app:met_textColor="@android:color/black"
        app:met_underlineColor="@color/colorPrimaryDark" />

</android.support.constraint.ConstraintLayout>