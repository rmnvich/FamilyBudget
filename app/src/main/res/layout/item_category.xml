<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="category"
            type="rmnvich.apps.familybudget.data.entity.Category" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/item_family_member_vertical_margin"
        android:layout_marginLeft="@dimen/item_family_member_horizontal_margin"
        android:layout_marginRight="@dimen/item_family_member_horizontal_margin"
        android:layout_marginBottom="@dimen/item_family_member_vertical_margin"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        android:foreground="?attr/selectableItemBackground"
        app:contentPadding="@dimen/item_category_padding"
        tools:ignore="UseCompoundDrawables">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <rmnvich.apps.familybudget.presentation.custom.CircleView
                android:id="@+id/iv_category_color"
                android:layout_width="@dimen/item_category_size"
                android:layout_height="@dimen/item_category_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_category_text_margin_start"
                android:text="@{category.name}"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_category_color"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>