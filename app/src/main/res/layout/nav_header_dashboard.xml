<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="rmnvich.apps.familybudget.domain.helper.DateHelper" />

        <variable
            name="user"
            type="rmnvich.apps.familybudget.data.entity.User" />

        <variable
            name="balance"
            type="rmnvich.apps.familybudget.data.entity.Balance" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/nav_background"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/photo_header_size"
            android:layout_height="@dimen/photo_header_size"
            android:contentDescription="@string/nav_header_desc"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="@dimen/photo_header_width"
            app:layout_constraintBottom_toTopOf="@id/tv_user_name" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text='@{user.name + " " + user.lastname}'
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_date"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{DateHelper.getCurrentTimeInString()}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/tv_balance"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{balance == null ? @string/balance_is_unavailable : @string/balance + balance.balance + " BYN"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/tv_total_actual_expenses"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_total_actual_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{balance == null ? @string/balance_is_unavailable : @string/total_actual_expenses + balance.totalActualExpenses + " BYN"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/tv_total_planned_expenses"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_total_planned_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{balance == null ? @string/balance_is_unavailable : @string/total_planned_expenses + balance.totalPlannedExpenses + " BYN"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/tv_total_incomes"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_total_incomes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{balance == null ? @string/balance_is_unavailable : @string/total_incomes + balance.totalIncomes + " BYN"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>