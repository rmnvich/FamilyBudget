<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="custom_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">@dimen/custom_button_padding</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingLeft">@dimen/custom_button_padding</item>
        <item name="android:paddingRight">@dimen/custom_button_padding</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorTextAlphaGray</item>
        <item name="android:textSize">@dimen/custom_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
